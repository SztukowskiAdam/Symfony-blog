{% extends 'base.html.twig' %}

{% block main %}
        <div class="row jumbotron login-form">
            <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4 col-xl-4 mx-auto text-center">

                {% if error %}
                    <div class="has-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Login:</label>
                        <input type="text" id="username" class="form-control" name="_username" placeholder="Wpisz login" value="{{ last_username }}" />
                    </div>
                    <div class="form-group">
                        <label for="password">Hasło:</label>
                        <input type="password" id="password" class="form-control"  name="_password" placeholder="Wpisz hasło" />
                    </div>
                    <input type="hidden" name="_target_path" value="/admin" />
                    <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}" />
                    <button type="submit" class="btn btn-primary">Zaloguj się</button>
                </form>
            </div>
        </div>
{% endblock %}

